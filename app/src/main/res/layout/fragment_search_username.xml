<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rifcode.chatiw.Home.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtSearchbyUsername"
                android:hint="@string/search_by_username"
                android:inputType="text"
                android:textColorHint="@color/colorWhite"
                android:padding="9dp"
                android:layout_marginRight="5dp"
                android:maxLines="1"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:background="@color/colorVertbyrry"
                android:layout_marginEnd="5dp" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/search_checked"
                android:id="@+id/imgvSearch"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rcvSearchByUsername"
            android:layout_marginTop="15dp"
            >


        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

</LinearLayout>
